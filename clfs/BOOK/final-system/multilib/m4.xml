    <para os="a">Apply a fix for glibc-2.29:</para>
<screen os="b"><userinput>CC="gcc ${BUILD64}" ./configure \
    --prefix=/usr
sed -i 's/IO_ftrylockfile/IO_EOF_SEEN/' lib/*.c
echo "#define _IO_IN_BACKUP 0x100" >> lib/stdio-impl.h </userinput></screen>

