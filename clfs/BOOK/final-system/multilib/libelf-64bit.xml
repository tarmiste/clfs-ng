  <sect2 role="installation">
    <title>Installation of Libelf</title>

    <xi:include xmlns:xi="http://www.w3.org/2001/XInclude"
    href="../common/libelf.xml"
    xpointer="xpointer(//*[@os='a'])"/>

<screen os="b"><userinput>CC="gcc -isystem /usr/include ${BUILD64}" \
CXX="g++ -isystem /usr/include ${BUILD64}" \
LDFLAGS="-Wl,-rpath-link,/usr/lib64:/lib ${BUILD64}" \
./configure \
    --prefix=/usr \
    --libdir=/lib64 \
    --libexecdir=/usr/lib64</userinput></screen>

